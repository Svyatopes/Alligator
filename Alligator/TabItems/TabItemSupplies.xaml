<TabItem x:Class="Alligator.UI.TabItems.TabItemSupplies"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Header="Поставки">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />                    
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Поставки</Label>
        <DataGrid Grid.Row="1" Margin="10" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Supplies}" >
             <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Width="1*" Binding="{Binding Date}" />
                <DataGridTextColumn Header="Продукт" Width="1*" Binding="{Binding Product}"/>
                <DataGridTextColumn Header="Количество" Width="1*" Binding="{Binding Amount}"/>
                <DataGridTemplateColumn Width="1*">
                      <DataGridTemplateColumn.CellTemplate>
                          <DataTemplate>
                              <Button Click="ButtonSupplyDelete_Click">Удалить</Button>
                          </DataTemplate>
                      </DataGridTemplateColumn.CellTemplate>
                 </DataGridTemplateColumn>
             </DataGrid.Columns>
        </DataGrid>     

        <Grid Grid.Row="2" VerticalAlignment="Stretch" Height="Auto">
             <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="1*" />
                 <ColumnDefinition Width="1*" />
                 <ColumnDefinition Width="1*" />
             </Grid.ColumnDefinitions>
             <TextBox  Grid.Column="0" Margin="-10,0,0,0" MinWidth="70" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TextBoxNewProductText}" />
             <TextBlock  Grid.Column="0" Margin="-150,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Продукт" />
             <TextBox  Grid.Column="1" Margin="-130,0,0,0" MinWidth="70" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TextBoxNewAmountText}" />
             <TextBlock  Grid.Column="0" Margin="150,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Количество" /> 
             <DatePicker Name="DatePickerBooox" Grid.Column="1" Margin="100,0,0,0" MinWidth="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
             <Button Grid.Column="2" Margin="10" MinWidth="100" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonAddNewSupply_Click" Content="Добавить новую поставку"/>
        </Grid>

    </Grid>
    
</TabItem>
