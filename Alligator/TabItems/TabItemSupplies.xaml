        <Grid Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" Height="Auto">
            <TextBox  Grid.Column="0" Margin="-10,0,0,0" MinWidth="70" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TextBoxNewProductText}" />
            <TextBlock  Grid.Column="0" Margin="-150,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Продукт" />
            <TextBox  Grid.Column="1" Margin="-130,0,0,0" MinWidth="70" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TextBoxNewAmountText}" />
            <TextBlock  Grid.Column="0" Margin="150,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Количество" />
            <DatePicker Name="DatePickerBooox" Grid.Column="1" Margin="100,0,0,0" MinWidth="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
            
            <TextBox Grid.Column="0" Grid.Row="0" Margin="0,0,0,0" MinWidth="70" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TextBoxNewProductText}" />
