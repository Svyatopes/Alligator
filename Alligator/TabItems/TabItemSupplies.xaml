            <TextBox Grid.Column="2" Grid.Row="2" Margin="0,0,0,0" MinWidth="70" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TextBoxNewAmountText}" />
             
        </Grid> -->
        

    </Grid>
    
</TabItem>
